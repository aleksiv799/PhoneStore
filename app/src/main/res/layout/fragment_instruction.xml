<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_default_gradient"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.my.udacity.phonestore.presentation.InstructionFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_8"
            android:layout_marginEnd="@dimen/default_margin_8"
            android:fontFamily="@font/roboto"
            android:text="@string/instruction"
            android:textSize="@dimen/instruction_text_18" />

        <Button
            android:id="@+id/btnInstruction"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_8"
            android:layout_marginTop="@dimen/default_margin_16"
            android:layout_marginEnd="@dimen/default_margin_8"
            android:background="@drawable/round_button"
            android:fontFamily="@font/roboto"
            android:text="@string/btn_go_to_the_list_of_phones" />

    </LinearLayout>
</layout>